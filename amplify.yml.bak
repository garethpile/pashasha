version: 1
applications:
  - appRoot: .
    env:
      variables:
        HUSKY: '0'
    frontend:
      phases:
        preBuild:
          commands:
            - npm ci --workspaces --ignore-scripts --prefer-offline=false --no-audit --progress=false
            - npm run build --workspace @pashashapay/contracts
        build:
          commands:
            - npm run build --workspace frontend
      artifacts:
        baseDirectory: apps/frontend/.next
        files:
          - '**/*'
      cache:
        paths:
          - node_modules/**/*
          - apps/frontend/node_modules/**/*
          - apps/frontend/.next/cache/**/*
      redirects:
        - source: '</^[^.]+$|\.(?!(css|gif|ico|jpg|js|png|txt|svg|woff|woff2|ttf|map|json)$)([^.]+$)/>'
          target: /index.html
          status: 200
          condition: null
